<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MLS_Mobile.AboutPage"
             Title="AboutPage">

    <StackLayout BackgroundColor="{StaticResource Lightest_G}">
        <Frame Margin="0,50,0,0"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5,0.4,AutoSize,AutoSize" 
               BackgroundColor="#FFFFFF"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               BorderColor="Black">
            <StackLayout>
                <Label Text="MLogger Server Mobile" HorizontalTextAlignment="Center" FontSize="Title" TextColor="#000000"/>
                <Label Text="Version 1.1.4" HorizontalTextAlignment="Center" FontSize="Small" TextColor="#000000"/>
                <Label Text="Popolo Project" HorizontalTextAlignment="Center" FontSize="Large" Margin="0,20,0,0" TextColor="#000000"/>
                <Label Text="https://www.hvacsimulator.net" HorizontalTextAlignment="Center" TextColor="#000000"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
