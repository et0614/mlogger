<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Visual="Material"
             x:Class="MLS_Mobile.LoggingDataList" BackgroundColor="#FFFFFF">
    
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="fileList" ItemSelected="fileList_ItemSelected" BackgroundColor="#FFFFFF">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Text}" TextColor="{Binding TextColor}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>